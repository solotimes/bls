extends index
append head
  - locals.bodyClass = 'lite'
block content
  .main
    .form
      .form-header
        ul.inline-block.tabs
          li.tab.current
            a(href='/customers/#{instance.id}')会员信息
          li.tab
            a(href='/customers/#{instance.id}/records')上传记录
          li.tab
            a(href='/customers/#{instance.id}/report')错误报告
        a(style='margin-left:20px').close.btn 关闭
      include ../flash
      .field.gray
        span.label
          会员ID
        span
          =instance.id
        span(style='margin-left:20px') 注册时间 #{moment(instance.CreatedAt).format('YYYY-MM-DD HH:mm')}
      .field
        span.label 会员类别:
        span=instance.levelText()
      .field
        span.label 积分:
        span=instance.Credit
      .field
        span.label 试卷:
        span 上传#{customerPapers.length}张卷子
        - var finishedCount = customerPapers.filter(function(cp){return cp.Status == 6 || cp.Status == 7}).length;
        span 完成解答#{finishedCount}张
        - var untouchedCount = customerPapers.filter(function(cp){return cp.Status == 0}).length;
        span 未处理#{untouchedCount}张
      .field
        span.label 有效期:
        span=moment(instance.BeginDate).format('YYYY-MM-DD')
        |至
        span=moment(instance.ExpireDate).format('YYYY-MM-DD')
        span.label 最大上传卷子数:
        span=instance.MaxPaper
      .field
        span.label 姓名:
        span=instance.Name
      .field
        span.label 用户名:
        span=instance.UserName
      .field
        span.label Email:
        span=instance.Email
      .field
        span.label 性别:
        span
          if instance.Gender
            |男
          else
            |女
      .field
        span.label 身份:
        span=instance.roleText()
      .field
        span.label 关联用户:
        span
          :qejs(instance=instance)
            <% instance.getRelated() -> related -%>
            <%=  (related||[]).map(function(c){return c.Name}).join(',') %>
            <% <- -%>
      .field
        span.label 学校:
        span=instance.School
      .field
        span.label 学校类型:
        span=instance.SchoolType ? '私立': '公立'
      .field
        span.label 年级:
        span=instance.gradeText()
      .field
        span.label 入学时间:
        span=moment(instance.EnrollTime).format('YYYY年')
      .field
        span.label 班级:
        span=instance.Class
      .field
        span.label 学号:
        span=instance.StudentNumber
      .field
        span.label 出生年月:
        span=moment(instance.Dob).format('YYYY-MM-DD')
      .field
        span.label 手机号码:
        span=instance.Mobile
      .field
        span.label 家庭住址:
        span=instance.Address
      .field
        span.label 邮编:
        span=instance.ZipCode
      .field
        span.label 充值金额:
        span #{instance.Amount}元
      .field
        span.label 备注:
        span= instance.Comment
      .actions
        a.close.btn 关闭
        a(href='/customers/#{instance.id}/edit').btn.btn-orange 修改